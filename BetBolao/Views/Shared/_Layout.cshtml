<body>
    <div class="bs-example ">
        <nav role="navigation" class="navbar navbar-default ">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class=" navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="menuNavegavel navbar-toggle">
                    <span class="sr-only">Toggle</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BetBolão", "Home", "Home", null, new { @class = "bolao-brand " })
            </div>
            <!-- Collection of nav links and other content for toggling -->
            <div id="navbarCollapse" class=" collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        if (Session["perfil"].ToString() == "administrador")
                        {
                            <li>
                                @Html.ActionLink("Administração", "HomeAdministrativa", "Home", null, new { @class = "menuNavegavel1" })
                            </li>
                        }

                    }
                    <li>
                        @Html.ActionLink("Menu Principal", "HomeUsuario", "Home", null, new { @class = "menuNavegavel1" })
                    </li>
                    <li>@Html.ActionLink("Listar Bolões", "ListarBoloesParticipante", "Bolao", null, new { @class = "menuNavegavel1" })</li>
                    
                    <li><a href="#">novidades em breve...</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="menuNavegavel1">
                        @*<div id="divLogin" @*style="color: white; text-align: right; float: right">*@
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            <p class="texto-logar-login">bem vindo: @HttpContext.Current.User.Identity.Name, @Html.ActionLink("log off", "LogOff", "Conta") </p>

                        }
                        else
                        {
                            @Html.ActionLink("Logar", "LogOn", "Conta")
                        }
                        @*  </div>*@
                    </li>
                </ul>
            </div>
        </nav>
    </div>

